<launch>
    <include file="$(find multirotors)/launch/import_packages.launch"/>

    <node pkg="multirotors" type="fiducial_follower.py" name="fiducial_follower" required="true" output="screen" />

    <node name="ar_pose" pkg="ar_pose" type="ar_multi" respawn="false" output="screen">
    	<param name="marker_pattern_list" type="string"
    		value="$(find ar_pose)/data/object_4x4"/>
    	<param name="marker_width" type="double" value="152.4"/>
    	<param name="marker_center_x" type="double" value="0.0"/>
    	<param name="marker_center_y" type="double" value="0.0"/>
    	<param name="threshold" type="int" value="100"/>
    	<param name="use_history" type="bool" value="true"/>
    </node>
</launch>